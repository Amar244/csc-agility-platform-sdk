<?xml version="1.0" encoding="UTF-8"?>
<ivy-settings>

  <!-- http://ant.apache.org/ivy/history/2.2.0/settings/settings.html -->
  <settings defaultResolver="ivy" />

  <!-- http://ant.apache.org/ivy/history/2.2.0/settings/resolvers.html -->
  <resolvers>
    <!-- ant property 'ivy.publisher' specifies which ivy repo to publish to (optional, defaults to correct repo for ivy.resolver) -->

    <url name="maven-central" m2compatible="true" >
        <artifact pattern="http://central.maven.org/maven2/[organization]/[module]/[revision]/[artifact]-[revision]([tag]).[ext]" />
        <ivy pattern="http://central.maven.org/maven2/[organization]/[module]/[revision]/[module]-[revision].[ext]" />
    </url>

	<filesystem name="local" m2compatible="true">
        <artifact pattern="${ivy.settings.dir}/local-maven-repo/[organization]/[module]/[revision]/[artifact]-[revision]([tag]).[ext]" />
      </filesystem>

    <!-- Resolver Chains: http://ant.apache.org/ivy/history/latest-milestone/resolver/chain.html -->
    <!-- ant property 'ivy.resolver' specifies which resolver chain to use (defaults to develop) -->
    <!-- example: ant publish -Divy.resolver=release -->

    <!-- Used by developers to access their local versions; otherwise pull from artifactory develop -->
    <chain name="ivy" returnFirst="true">
        <resolver ref="maven-central" />
        <resolver ref="local"/>
    </chain>

    <!-- Used for CI release builds -->
    <chain name="release" returnFirst="true">
    </chain>

    <!-- End of Resolver Chains -->

  </resolvers>
</ivy-settings>
