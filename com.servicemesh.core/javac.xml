<project>

    <property name="ant.build.javac.target" value="1.7" />
    <property name="ant.build.javac.source" value="1.7" />

    <fail message="Unsupported Java version: ${ant.java.version}.  Make sure that the Java version is 1.7.">
        <condition>
            <not>
                <equals arg1="${ant.java.version}" arg2="1.7"/>
            </not>
        </condition>
    </fail>

</project>
